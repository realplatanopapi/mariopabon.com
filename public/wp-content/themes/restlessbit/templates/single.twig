{% extends "base.twig" %}

{% block content %}
	<article class="wrapper longform">
    <header class="content-header">
      <p class="content-header__subtitle">
        {{ post.post_date|date}}
      </p>
      <h1 class="content-header__title">
        {{ post.title }}
      </h1>
    </header>

    <section>
			{{post.content}}
		</section>

    <footer class="longform__footer">
      <div class="pager">
        <div class="pager__content">
          <a class="pager__nav btn btn--primary" href="{{url}}">
            <span class="btn__icon">⤌</span> Newer Post
          </a>

          <a class="pager__nav btn btn--primary" href="{{url}}">
            Older Post <span class="btn__icon">⤍</span>
          </a>
        </div>
        <div class="pager__nav pager__nav--full text-center">
          <a href="/">Back to home</a>
        </div>
      </div>
    </footer>
	</article>
{% endblock %}
