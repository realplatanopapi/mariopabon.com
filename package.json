{
  "private": true,
  "scripts": {
    "build": "npm run clean && npm run jekyll && npm run scripts && npm run styles && npm run public",
    "clean": "rm -rf dist",
    "compress": "npm run compress/scripts && npm run compress/styles",
    "compress/scripts": "uglifyjs dist/app.js --compress --mangle --o dist/app.js",
    "compress/styles": "cssnano dist/styles.css dist/styles.css",
    "develop": "npm run build && concurrently 'jekyll serve' 'npm run scripts/watch' 'npm run styles/watch'",
    "jekyll": "jekyll build",
    "public": "cp public/* dist/",
    "scripts": "globify 'javascripts/*.js' -o dist",
    "scripts/watch": "npm run scripts -- --watch",
    "styles": "node-sass styles --output dist --include-path node_modules",
    "styles/watch": "npm run styles -- --watch --recursive",
    "poststyles": "postcss dist/styles.css --use autoprefixer --output dist/styles.css"
  },
  "devDependencies": {
    "concurrently": "3.4.0",
    "cssnano-cli": "1.0.5",
    "globify": "2.0.0",
    "node-sass": "4.5.1",
    "uglifyjs": "2.4.10"
  },
  "dependencies": {
    "prismjs": "1.6.0"
  }
}
